<Alloy>
	<Collection src="hotspotModel" />
	<TabGroup id="tabs" backgroundColor="#fff" height="100%" tintColor="#FF9966">
		<Tab id="koster" class="btn" title="Koster" icon="/images/kosterStarMenuCopy.png" >
			<Window id="koster" class="container" backgroundImage="/pics/front.png" navBarHidden="true">
				<ScrollView class="headView">
					<ImageView class="imgKoster" image="/pics/logga.png"></ImageView>
					<Label id="lblheadInfo"></Label>
					<View class="buttonView">
						<Button class="btnIndex" onClick="aboutKoster">Mer om Nationalparken</Button>
						<Button class="btnIndex" onClick="aboutNaturum">Mer om Naturum</Button>
						<Button class="btnIndex" onClick="hotspotView">Mer om Hotspots</Button>
					</View>
					<Widget id="alertHotspot" src="alertWidgetHotspot" name="widget" />
				</ScrollView>
			</Window>
		</Tab>
		<Tab id="hikeTab" title="Vandringleder" icon="/images/hikeMenuCopy.png" onClick="toTrails">
			<Window id="hikeWin" title="Vandringleder" onOpen="toTrails" />
		</Tab>
		<Tab id="maptab" title="Karta" icon="/images/mapMenuCopy.png">
			<Window id="mapWin" onOpen="toMap" navBarHidden="true" />
		</Tab>
		<Tab id="quiz" title="Quiz" icon="/images/quizMenuCopy.png">
			<Window id="quizWin" onOpen="toQuiz" navBarHidden="true" />
		</Tab>
		<Tab id="info" title="Turistinformation" icon="/images/infoMenuCopy.png">
			<Window id="infoWin" title="Information" onOpen="toInfo" />
		</Tab>
	</TabGroup>

</Alloy>