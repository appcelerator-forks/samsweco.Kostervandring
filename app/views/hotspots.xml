<Alloy>
	<Collection src="hotspotModel" />
	<Window class="container">

		<ScrollView class="headView">
			<Button id="closeWin" onClick="close" title="St채ng"></Button>
			<TableView id="table" dataCollection="hotspotModel">
				<TableViewRow class="row" number="{id}" name="{name}" infoTxt="{infoTxt}" xkoord="{xkoord}" ykoord="{ykoord}" image="{cover_pic}" onClick="showHotspotDetails">
					<View class="listItem">
						<ImageView class="listImg" image="{cover_pic}"/>
						<View id="lblView">
							<Label class="lblListTitle" text="{name}"/>
							<Label class="lblListKm" text="{length}"/>

						</View>
					</View>
				</TableViewRow>
			</TableView>
		</ScrollView>

		<!-- Navigeringsmenyn med knappar l채ngst ner p책 sidan som skickar anv채ndaren till vald sida -->
		<View id="menuView">
