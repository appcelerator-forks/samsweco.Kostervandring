<Alloy>
	<Collection src="quizModel"/>
	<Window class="container">
		<ScrollView class="headView">

			<View id="spela" class="views" visible="true">
				<Label id="lblValkommen">Välkommen till quizet</Label>
				<Label id="lblInfoQuiz">Utmana dig själv och familjen i Kosterquizet, du kan spela detta om du går den röda slingan. Glöm inte att sätta på notifications så du blir påmind när du närmar dig en fråga </Label>
				<Button id="btnVisaFraga" onClick="openQuiz">Se första frågan</Button>

			</View>
			<View id="viewFraga" class="views" visible="false">
				<Label id="visaFraga"></Label>
				<ListView id="lista">
					<ListSection id="section" dataCollection="quizModel" >

						<ListItem class="row" title="{alt1}"/>
						<ListItem class="row" title="{alt2}"/>
						<ListItem class="row" title="{alt3}"/>
					</ListSection>
				</ListView>
				<Button id="btnSvara">Svara</Button>
			</View>

		</ScrollView>
		<Widget id="alert" src="alertWidgetQuiz" name="widget" />
		<View id="menuView">
			<Widget id="menuBar" src="menuWidget" name="widget"/>
		</View>
	</Window>
</Alloy>