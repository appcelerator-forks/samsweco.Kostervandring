<Alloy>
	<Collection src="quizModel"/>
	<Window class="container">
		<ScrollView class="headView">

			<View class="question" dataCollection="quizModel"></View>
			<Button id="fraga" onClick="showQuestion">Se första frågan</Button>
			<Label id="visaFraga"></Label>
			<Button id="svar" onClick="showAnswer">visa svar</Button>
			
			<!-- <Label id="alternativEtt"></Label>
			<Label id="alternativTvå"></Label>
			<Label id="alternativTre"></Label> -->
			<!-- <Label id="lblQuestion" text="{question}"></Label> -->
			
			<ListView id="lista">
				<ListSection id="section" dataCollection="quizModel" >

					<ListItem class="row" title="{alt1}"/>
					<ListItem class="row" title="{alt2}"/>
					<ListItem class="row" title="{alt3}"/>
				</ListSection>
			</ListView>
			<Button id="Svara">Svara</Button>
			<Widget id="alert" src="alertWidgetQuiz" name="widget" />

		</ScrollView>
		<View id="menuView">
			<Widget id="menuBar" src="menuWidget" name="widget"/>
		</View>
	</Window>
</Alloy>