<Alloy>
	<Collection src="quizModel"/>
	<Window class="container">
		<ScrollView class="headView">

			<View id="spela" visible="true">
				<Label>Välkommen till quizet!!</Label>
				<Button id="fraga" onClick="openQuiz">Se första frågan</Button>
				
			</View>
			<View id="viewFraga" visible="false">
			<Label id="visaFraga"></Label>
			<Button id="svar">visa svar</Button>
			<ListView id="lista">
				<ListSection id="section" dataCollection="quizModel" >

					<ListItem class="row" title="{alt1}"/>
					<ListItem class="row" title="{alt2}"/>
					<ListItem class="row" title="{alt3}"/>
				</ListSection>
			</ListView>
			<Button id="Svara">Svara</Button>
			</View>
			<Widget id="alert" src="alertWidgetQuiz" name="widget" />

		</ScrollView>
		<View id="menuView">
			<Widget id="menuBar" src="menuWidget" name="widget"/>
		</View>
	</Window>
</Alloy>