<Alloy>
	<Collection src="infoModel" />
	<Window class="container">

		<ScrollView class="headView">
			<TableView id="table" dataCollection="infoModel">
				<TableViewRow class="row" name="{name}" infoTxt="{infoTxt}" image="{cover_img}" link="{url}" onClick="showinfoDetails">
					<View class="listItem">
						<ImageView class="listImg" image="{cover_img}"/>
						<View id="lblView">
							<Label class="lblListTitle" text="{name}"/>
						</View>
					</View>
				</TableViewRow>
			</TableView>
		</ScrollView>

		<!-- Navigeringsmenyn med knappar längst ner på sidan som skickar användaren till vald sida -->
		<View id="menuView">
			<Widget id="menuBar" src="menuWidget" name="widget"/>
		</View>

	</Window>
</Alloy>