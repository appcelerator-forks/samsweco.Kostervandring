<Alloy>
	<Collection src="mediaModel"></Collection>
	<Collection src="hotspotModel"></Collection>
	<Window class="container">

		<ScrollView class="headView">
			<ScrollableView id="slideShowTrails" showPagingControl="true" />
			<View class="lbls">
				<Label id="lblTrailName" class="lbltrailDetail"></Label> 
				<Label id="lblTrailLength" class="lbltrailDetail"></Label>
				<Label id="lblTrailColor" class="lbltrailDetail"></Label>
				<Label id="lblTrailInfo" class="lbltrailDetail"></Label>
			</View>
			
			
			
			<View id="hotspotView">
				<Label class="lblTitle">Det här kan du se längs vägen:</Label>

					<TableView id="table">
						<TableViewRow class="row">
							<View class="listItem">
								<ImageView id="listImageview" class="listImg" image="/pics/fyr.png"/>
								<View id="lblView">
									<Label id="lblHotName" class="lblListTitle" text="Fyren"/>
								</View>
							</View>
						</TableViewRow>
					</TableView>

			</View>

		</ScrollView>

		<!-- Navigeringsmenyn med knappar längst ner på sidan som skickar användaren till vald sida -->
		<View id="menuView">
			<Widget id="menuBar" src="menuWidget" name="widget"/>
		</View>

	</Window>
</Alloy>